<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wang.dao.ResearchTeamDao" >
    <resultMap id="BaseResultMap" type="com.wang.entity.ResearchTeam" >
        <result column="p_info" property="info" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
          tid, name, p_info
    </sql>

    <sql id="Team_Represent_Column_List" >
          trid, represen_avatar, name, info, direction
    </sql>

    <select id="researchTeam" resultMap="BaseResultMap" parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from team
    </select>

    <select id="teamInfoById" resultMap="BaseResultMap" parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from team
        where tid= #{tid,jdbcType=INTEGER};
    </select>

    <select id="teamRepresentById" resultType="com.wang.entity.TeamRepresent" parameterType="java.lang.Integer"  >
        select  <include refid="Team_Represent_Column_List" />
        from team_representative,re_team_representative
        where t_id= #{stId,jdbcType=INTEGER} and represent_id=trid;
    </select>

</mapper>
