<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wang.Dao.ContentDao" >
    <resultMap id="BaseResultMap" type="com.wang.entity.Content" >
        <result column="title" property="title" jdbcType="VARCHAR" />
        <result column="content" property="content" jdbcType="VARCHAR" />
        <result column="image_url" property="image_url" jdbcType="VARCHAR" />
        <result column="publish_date" property="publish_date" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
      cid,title,content ,image_url,publish_date
    </sql>



    <select id="topnews" resultType="com.wang.entity.Content" >
        select  <include refid="Base_Column_List" />
        from b_content limit 0  , 5
    </select>


    <select id="selectcontentbycid" resultMap="BaseResultMap"  parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from b_content
        where cid= #{cid,jdbcType=INTEGER}
    </select>


</mapper>

