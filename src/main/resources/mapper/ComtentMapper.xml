<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wang.dao.ContentDao" >
    <resultMap id="BaseResultMap" type="com.wang.entity.Content" >
        <result column="title" property="title" jdbcType="VARCHAR" />
        <result column="content" property="content" jdbcType="VARCHAR" />
        <result column="image_url" property="image_url" jdbcType="VARCHAR" />
        <result column="hits" property="hits" jdbcType="VARCHAR" />
        <result column="source" property="source" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="VARCHAR" />
        <result column="link" property="link" jdbcType="VARCHAR" />
        <result column="publish_date" property="publish_date" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
      cid,title,content ,image_url,hits,source,type,publish_date,link
    </sql>



    <select id="topimagenews" resultType="com.wang.entity.Content"  parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from b_content   where type= #{type,jdbcType=INTEGER}  AND LENGTH(image_url)>=5  ORDER BY publish_date desc  limit 0  , 3
    </select>

    <select id="topnews" resultType="com.wang.entity.Content"  parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from b_content     where type= #{type,jdbcType=INTEGER}  and image_url is not null ORDER BY publish_date desc  limit 0  , 5
    </select>

    <select id="newslist" resultType="com.wang.entity.Content"  parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from b_content     where type= #{type,jdbcType=INTEGER}  ORDER BY publish_date desc
    </select>

    <select id="selectcontentbycid" resultMap="BaseResultMap"  parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from b_content
        where cid= #{cid,jdbcType=INTEGER} AND type=1;
    </select>

    <select id="selectcontentzcywbycid" resultMap="BaseResultMap"  parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from b_content
        where cid= #{cid,jdbcType=INTEGER} AND type=2;
    </select>

    <select id="getzcywbyid" resultMap="BaseResultMap"  parameterType="java.lang.Integer"  >
        select  <include refid="Base_Column_List" />
        from b_content
        where cid= #{cid,jdbcType=INTEGER} AND type=2;
    </select>

    <select id="updatehits"  parameterType="java.lang.Integer"  >
        UPDATE b_content SET hits=hits+1 WHERE  cid= #{cid,jdbcType=INTEGER};
    </select>
</mapper>

